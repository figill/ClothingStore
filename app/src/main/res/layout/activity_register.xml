<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView1"
        android:layout_width="156dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="385dp"
        android:layout_height="36dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:drawableEnd="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:hint="Enter Full Name"
        android:inputType="textPersonName"
        android:textColor="@color/blue"
        android:textColorHint="@color/b" />


    <EditText
        android:id="@+id/address"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:drawableEnd="@drawable/ic_baseline_house_24"
        android:ems="10"
        android:hint="Enter Shipping Address"
        android:inputType="text"
        android:textColor="@color/blue"
        android:textColorHint="@color/b" />

    <EditText
        android:id="@+id/payment"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:drawableEnd="@drawable/ic_baseline_add_card_24"
        android:ems="10"
        android:hint="Enter Card Number"
        android:inputType="textPersonName"
        android:textColor="@color/blue"
        android:textColorHint="@color/b" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/payment2"
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Expiry Date"
            android:inputType="textPersonName"
            android:textColor="@color/blue"
            android:textColorHint="@color/b" />

        <EditText
            android:id="@+id/payment3"
            android:layout_width="112dp"
            android:layout_height="53dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="CVS"
            android:inputType="textPersonName"
            android:textColor="@color/blue"
            android:textColorHint="@color/b" />
    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/signin"
        android:padding="15dp"
        android:text="Sign up"
        android:textAllCaps="true"
        android:textColor="@color/white" />


</LinearLayout>